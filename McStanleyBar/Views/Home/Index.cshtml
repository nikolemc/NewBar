@model McStanleyBar.ViewModels.HomePageViewModel

@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Home Page";
}


 @foreach (var Event in Model.Event)
 {
    <div class="container">
        <div class="row">
            <div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">                
                <ul class="event-list">
                    <li>
                        <time datetime="2014-07-20">
                            <span class="day">@Event.StartDate</span>
                            <span class="month">@Event.StartDate</span>
                        </time>
                        <img alt="EventImage" src="@Event.Img" />
                        <div class="info">
                            <h2 class="title">@Event.Title</h2>
                            <p class="venue">@Event.Venue.Name</p>
                            <p class="genre">@Event.Genre.GenreName</p>
                            <p class="startTime">@Event.StartTime</p>
                        </div>
                    </li>
                 </ul>
            </div>
        </div>
    </div>

 }
